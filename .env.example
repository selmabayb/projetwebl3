# =============================================================================
# GARAGEPLUS - Variables d'environnement
# =============================================================================
# Copier ce fichier en .env et remplir les valeurs
# IMPORTANT: Ne jamais commiter le fichier .env

# =============================================================================
# DJANGO CORE
# =============================================================================
# Environment: development, staging, production
DJANGO_ENV=development

# Secret key (générer avec: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
DJANGO_SECRET_KEY=votre-secret-key-ici-a-generer

# Debug mode (TOUJOURS False en production)
DJANGO_DEBUG=True

# Hosts autorisés (séparer par des virgules)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# BASE DE DONNÉES
# =============================================================================
# Pour SQLite (développement uniquement)
# DATABASE_URL=sqlite:///db.sqlite3

# Pour PostgreSQL (production recommandée)
# DATABASE_URL=postgresql://user:password@localhost:5432/garageplus
# Ou décomposer:
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# EMAIL
# =============================================================================
# Backend email (console pour dev, smtp pour prod)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Configuration SMTP (pour production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@garage-auto-express.fr

# =============================================================================
# PARAMÈTRES MÉTIER
# =============================================================================
# Taux horaire par défaut (€/h)
GARAGE_HOURLY_RATE=60.00

# Taux de TVA
GARAGE_VAT_RATE=0.20

# Validité des devis (jours)
GARAGE_QUOTE_VALIDITY_DAYS=15

# Délai minimum d'annulation RDV (heures)
GARAGE_APPOINTMENT_MIN_CANCEL_HOURS=24

# Seuil de notification pour variation de devis
GARAGE_QUOTE_VARIATION_THRESHOLD=0.10

# =============================================================================
# INFORMATIONS DU GARAGE
# =============================================================================
GARAGE_NAME=Garage Auto Express
GARAGE_ADDRESS=123 Avenue de la Réparation
GARAGE_POSTAL_CODE=75001
GARAGE_CITY=Paris
GARAGE_PHONE=01 23 45 67 89
GARAGE_EMAIL=contact@garage-auto-express.fr
GARAGE_SIRET=123 456 789 00012
GARAGE_TVA_NUMBER=FR12 123456789

# =============================================================================
# SÉCURITÉ (Production uniquement)
# =============================================================================
# HTTPS/SSL
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
# LOG_FILE=logs/garage.log

# =============================================================================
# AUTRES
# =============================================================================
# Timezone
TZ=Europe/Paris

# Language
LANGUAGE_CODE=fr-fr
